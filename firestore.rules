rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to affiliates (for affiliate link validation)
    match /affiliates/{affiliateId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Allow public write access to leads (for form submissions)
    match /leads/{leadId} {
      allow create: if true;
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Admin-only access to analytics and other admin data
    match /analytics/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Admin-only access to system settings
    match /settings/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
} 